<% content_for :head do %>
  <script type="text/javascript">
    // replaceWith homepage
    $(function(){
      $("a#startSlide").click(function(){
        $('div#leftText').replaceWith($('div#slide'));
        $('#slides').css('visibility', 'visible');
        return false;
      });
    });
    // Focus goal on click
    $(function(){
      $("span#wanttobe").click(function(){
        $("span#wanttobe input").focus();
        $(this).addClass("focused");
      });
    });
    // Focus goal on tab
    $(function(){
      $("span#wanttobe").focusin(function(){
        $("span#wanttobe input").focus();
        $(this).addClass("focused");
      });
    });
    // Focus out
    $(function(){
      $("span#wanttobe").focusout(function(){
        $(this).removeClass("focused");
      });
    });
  </script>
<% end %>
<div id="wrapper">
  <div id="content">
    <div id="welcomeHead">
      <h1 class="old">What ails you, <%= current_user.profile.first_name %>?</h1>
      <p>*Here at POP, every problem must come with a solution. We want to keep things productive!</p>
    </div>
    <div id="homeForm">
    <%= render :partial => 'problems/new_problem_form' %>
    </div>
  </div><!-- end content -->
</div><!-- end wrapper -->